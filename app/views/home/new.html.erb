<%= form_with url: send_mail_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :to, "宛先" %><br>
    <%= form.text_field :to, size: 50 %>
  </div>

  <div>
    <%= form.label :subject, "件名" %><br>
    <%= form.text_field :subject, size: 50 %>
  </div>

  <div>
    <%= form.label :body, "本文" %><br>
    <%= form.text_area :body, rows: 10, cols: 60, id: "mail_body" %>
  </div>

  <div>
    <button type="button" id="add_greeting">アイサツ</button>
    <%= form.submit "送信" %>
  </div>
<% end %>
